<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        link(href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css')

        style. 
            body{background-color:gray;}
            .main_container {
                 background-color:white;
                 margin:auto;
                 padding:10px;
                 max-width:450px;
                 text-align:center; 
             }
            h1 {
                font-family:lato;
                font-size:24px; 
                font-style:normal; 
             }
            p {
                font-family:lato;
                font-size:12px; 
                font-style:normal;
             }
             #profile_picture.img {
                 border-radius:50px;
             }
    body
        script. 
            (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/messenger.Extensions.js";
            fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'Messenger'));
        
        .main_container

            h1 Here goes the title
            p
             |hello #{name} This is the first text, the message is #{title}
            br
            #profile_picture
                img src=#{profile_pic} width=100%
            p
             |your sender_psid is #{sender_psid}

        
        
        
        //when the sdk is loaded do something
        script. 
            window.extAsyncInit = function() {
             // the Messenger Extensions JS SDK is done loading 
             alert("facebook sdk has finished loading");
             };
       

    footer